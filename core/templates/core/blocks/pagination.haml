.pagination-block

  %nav
    %ul.pagination.pagination-sm
      - if page.has_previous
        %li
          %a{'href': '?={queries.urlencode}&page=={page.previous_page_number}',
             'aria-label': 'Previous'}
            <i aria-hidden="true" class="fa fa-chevron-left"></i>

      - for page_num in page_range
        - if not page_num
          %li.disabled
            %a{'href': ''}
              â€¦
        - elif page_num == page.number
          %li.active
            %a{'href': ''}
              {{ page_num }}
        - else
          %li
            %a{'href': '?={queries.urlencode}&page=={page_num}'}
              {{ page_num }}

      - if page.has_next
        %li
          %a{'href': '?={queries.urlencode}&page=={page.next_page_number}',
             'aria-label': 'Next'}
            <i aria-hidden="true" class="fa fa-chevron-right"></i>

  %div.count
    Number of results : {{ paginator.count }}
    %br
    Number of displayed results :
    {{ paginator.per_page }}
    (
    - for limit in pagination_limits
      %a{'href': '?limit={{ limit }}'}
        {{ limit }}
      - if not forloop.last
        \/
    )
    - include 'core/blocks/grid-list.html'
